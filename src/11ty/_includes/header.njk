<header class="mb-4 flex flex-col-reverse sm:flex-row items-center sm:justify-evenly lg:justify-around max-w-screen-lg lg:mx-auto">
	<h1 class="my-0 sm:w-1/2 md:w-auto mx-auto">
		<span>A</span>NNA B<span>R</span>ABAN<span>T</span>
	</h1>
	<nav class="flex w-full sm:w-3/5 justify-evenly max-w-sm mx-auto">
		{%- for group in [{ "work": "/", "archive": "/archive/"},{ "cv": "/cv/", "press": "/press/", "contact": "/contact/"},{ "instagram": "//instagram.com/annebrab" }] %}
		<div class="flex justify-evenly">
			{%- for key, url in group %}
			<a {% if url == page.url %}class="active"{% else %}href="{{ url }}"{% endif %}>{{ key }}</a>
			{%- endfor %}
		</div>
		{%- endfor %}
	</nav>
</header>
 