---
  layout: "_base"
  permalink: "/work/{{ art.title | slug }}-{{ art.year | onlyYear }}/"
  tags: "work"
  pagination:
    data: "artwork"
    size: 1
    alias: "art"
---

<div class="flex flex-col w-full md:justify-evenly md:flex-row-reverse">
	<div class="max-w-md mx-auto md:w-32 md:mt-12 md:ml-4 md:mr-0">
		<h3>{{art.title}}</h3>
    {%- for ea in art.tags %}
		<p>{{ea}}</p>
    {%- endfor %}
	</div>
	<div>
		<a href="https://res.cloudinary.com/annabrabant/image/upload/{{art.image}}">
			<img src="https://res.cloudinary.com/annabrabant/image/upload/h_800/{{art.image}}" alt="{{art.title}}">
		</a>
	</div>
</div>
